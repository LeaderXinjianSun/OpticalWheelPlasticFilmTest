<UserControl x:Class="OpticalWheelPlasticFilmTest.Views.Dialogs.AboutDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpticalWheelPlasticFilmTest.Views.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="360">
    <Grid>
        <StackPanel>
            <Image Stretch="Fill" Source="/Views/icon_vision.png" Width="60" Height="60" Margin="0,26,0,0"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="360" Margin="0,24,0,0">
                <TextBlock Text="{Binding Name,FallbackValue=123}" FontSize="22" Foreground="#326cf3" VerticalAlignment="Top" HorizontalAlignment="Center" />
                <TextBlock Text="{Binding Version,StringFormat=v {0}}" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="#326cf3"/>
            </StackPanel>
            <TextBlock Text="Copyright © Jiangsu Leader 2021-2022" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,14" Foreground="#bdbdbd"/>
        </StackPanel>
    </Grid>
</UserControl>
